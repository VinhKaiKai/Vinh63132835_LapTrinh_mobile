<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/pinkk"
    android:id="@+id/chudechinh"
    android:layout_height="match_parent"
    tools:context=".ManNoiDung">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TenTruyen"
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:background="@color/pinkk"
            android:fontFamily="serif"
            android:gravity="start"
            android:padding="20dp"
            android:text="Tên Truyện"
            android:textColor="@color/black2"
            android:textSize="23sp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/nut2"
                android:src="@drawable/chu2"
                android:id="@+id/chu"
                android:layout_marginBottom="3dp"
                android:layout_height="40dp">

            </ImageButton>
            <ImageButton
                android:layout_width="40dp"
                android:id="@+id/chude"
                android:src="@drawable/chude2"
                android:background="@drawable/nut2"
                android:layout_height="40dp">

            </ImageButton>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/noidung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/xam2"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:text="CONTENT"
        android:textColor="@color/xam1"
        android:textSize="20sp">

    </TextView>
</LinearLayout>