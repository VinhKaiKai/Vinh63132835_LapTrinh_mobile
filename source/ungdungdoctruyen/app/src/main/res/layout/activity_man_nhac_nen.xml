<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/xam5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ManNhacNen">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnback"
            android:background="@color/xam5"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:textSize="21sp"
            android:text="NHẠC ỨNG DỤNG"
            android:textStyle="bold"
            android:textColor="@color/yellow2"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="55dp"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avt"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="@color/white1"
            android:src="@drawable/khuvuontrenmay"
            android:elevation="4dp"
            app:civ_border_width="2dp">
        </de.hdodenhof.circleimageview.CircleImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="150dp"
            android:id="@+id/btnplay"
            android:layout_height="100dp"
            android:background="@drawable/nut2"
            android:layout_marginLeft="23dp"
            android:scaleType="center"
            android:src="@drawable/play2">

        </ImageButton>

        <ImageButton
            android:layout_width="150dp"
            android:id="@+id/btnstop"
            android:layout_marginLeft="15dp"
            android:background="@drawable/nut2"
            android:layout_height="100dp"
            android:scaleType="center"
            android:src="@drawable/stop2">

        </ImageButton>

    </LinearLayout>

</LinearLayout>